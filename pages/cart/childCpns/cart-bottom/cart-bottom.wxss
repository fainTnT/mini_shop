.bottom-menu {
  width: 100%;
  height: 88rpx;
  background-color: #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0 -4rpx 6rpx rgba(0, 0, 0, .2);
  font-size: 28rpx;
  color: #888;
  line-height: 88rpx;
  padding-left: 70rpx;
  box-sizing: border-box;
}
.bottom-menu .select-all {
  width:36rpx;
  height:36rpx;
  position: absolute;
  line-height: 0;
  left: 24rpx;
  top: 26rpx;
}
.bottom-menu .total-price {
  margin-left: 30rpx;
  font-size: 32rpx;
  color: #666;
}
.bottom-menu .buy-product {
  background-color: orangered;
  color: #fff;
  width: 200rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  float: right;
}
.icon-selector {
  position: relative;
  margin: 0;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 4rpx solid #ccc;
}
.selector-active {
  background-color: #ff8198;
  border-color: #ff8198;
}